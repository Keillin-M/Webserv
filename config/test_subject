# Tester subject 

server {
    listen 8080;
    root www;
    index index.html;



    # 1. / must answer to GET request ONLY
    # 2. Any file with .bla as extension must answer to POST request by calling the cgi_test executable
    location / {
        root www;
        allowed_methods GET;
        index index.html;
        # .bla CGI handling (POST)
        cgi_extension .bla;
        cgi_path /home/kmaeda/GitHub/webserv/cgi_test;
    }

    # 3. /post_body must answer anything to POST request with a maxBody of 100
    location /post_body {
        allowed_methods POST;
        client_max_body_size 100;
    }

    # 4. /directory/ must answer to GET request, root is YoupiBanane, index is youpi.bad_extension
    location /directory/ {
        root /home/kmaeda/GitHub/webserv/YoupiBanane;
        allowed_methods GET;
        index youpi.bad_extension;
    }
}